<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/vRegister"
    tools:context=".RegisterActivity"
    android:background="#fff">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar_RegisterWithMobileNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đăng ký"
            android:gravity="center"
            android:textAllCaps="true"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="#000"/>
        <ImageView
            android:layout_gravity="center"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:background="@drawable/medicine_logo"/>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/prop_textInputLayout">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/mobileNumber"
                style="@style/prop_textInputEditText"
                android:imeOptions="actionDone"
                android:hint="Số điện thoại"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/prop_textInputLayout">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/fullname"
                style="@style/prop_textInputEditText"
                android:imeOptions="actionDone"
                android:hint="Họ tên"
                android:inputType="text"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/prop_textInputLayout"
            app:endIconMode="password_toggle">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password"
                android:hint="Mật khẩu"
                style="@style/prop_textInputEditText"
                android:imeOptions="actionDone"
                android:inputType="textPassword"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/prop_textInputLayout"
            app:endIconMode="password_toggle">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/rePassword"
                android:hint="Xác nhận mật khẩu"
                style="@style/prop_textInputEditText"
                android:imeOptions="actionDone"
                android:inputType="textPassword"/>
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.google.android.material.textfield.TextInputLayout
                style="@style/prop_textInputLayout"
                android:layout_weight="2">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/otpCode"
                    style="@style/prop_textInputEditText"
                    android:hint="OTP"
                    android:imeOptions="actionDone"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:background="@drawable/bg_button_next_clicked"
                android:id="@+id/btnSendOTP"
                android:layout_marginStart="5dp"
                android:layout_width="80dp"
                android:textColor="#fff"
                android:layout_height="40dp"
                android:text="Gửi OTP"
                android:textAllCaps="false" />
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/linear_timeResend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gửi lại OTP trong: "
                android:textSize="15dp" />
            <TextView
                android:id="@+id/tvTimeResend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <Button
            style="@style/prop_Button"
            android:background="@drawable/bg_button_login_clicked"
            android:text="Đăng ký"
            android:id="@+id/btnRegister"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <TextView
            style="@style/prop_Button"
            android:background="@drawable/bg_button_register_clicked"
            android:text="Đã có tài khoản? Đăng nhập"
            android:id="@+id/tvAlreadyHaveAnAccount"
            android:gravity="center"
            android:textColor="#007ADA"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>
    </LinearLayout>

</LinearLayout>