<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentActivity"
    android:orientation="vertical"
    android:id="@+id/viewPayment">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar_Payment"
        app:title="Thanh toán"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dddddd" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
            <ImageView
                android:id="@+id/ivMedicinePayment"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@color/loading"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:text="Số điện thoại khách hàng: "
                    android:textColor="#000"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/customerMobileNum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="17dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="210dp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:text="Tên khách hàng: "
                    android:textColor="#000"
                    android:textSize="17dp"/>
                <TextView
                    android:id="@+id/customerName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="17dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="210dp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:text="Ngày mua: "
                    android:textColor="#000"
                    android:textSize="17dp"/>

                <TextView
                    android:id="@+id/dateCreated"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="17dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="210dp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:text="Ghi chú: "
                    android:textColor="#000"
                    android:textSize="17dp"/>
                <TextView
                    android:id="@+id/noted"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="17dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Danh sách thuốc:"
                android:textColor="#000"
                android:layout_marginTop="5dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/bg_recycle"
                android:id="@+id/rec_itemPayment"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:text="Tổng số lượng: "
                    android:textColor="#000"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/totalQtyDrug"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="17dp" />

            </LinearLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/prop_textInputLayout_search_home">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtTotalCash"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/prop_search_home"
                    android:hint="Tổng tiền"
                    android:imeOptions="actionDone"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/prop_textInputLayout_search_home">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtCustomerPaid"
                    style="@style/prop_search_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tiền khách trả"
                    android:imeOptions="actionDone"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="210dp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:text="Tiền thừa: "
                    android:textColor="#000"
                    android:textSize="17dp"/>
                <TextView
                    android:id="@+id/changeOfCustomer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="17dp"/>
            </LinearLayout>
            <Button
                android:id="@+id/btnSaveBill"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="Lưu hóa đơn"
                style="@style/prop_Button"
                android:background="@drawable/bg_button_login_clicked"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>